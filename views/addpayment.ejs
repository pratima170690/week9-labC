<!-- addpayment.ejs -->
<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Add Payment" }) %>

  <body>
    <%- include('partials/navbar') %>

    <div class="content">
      <div class="create">
        <h2>Add a New Payment</h2>
        <form action="/addPayment" method="POST">
          <label>Amount :</label
          ><input type="number" value="" id="amount" name="amount" required />

          <label>Method:</label
          ><input type="text" value="" id="method" name="method" required />

          <label>Status:</label
            ><input type="text" value="" id="status" name="status" required />

          <br />

          

      
          <button type="submit">Add Payment</button>
        </form>
      </div>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>