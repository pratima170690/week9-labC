<!-- Define a function to render each payment -->
<% function renderPayment(payment) { %>
  <div class="item-preview">
    <a href="/single-payment/<%= payment._id %>">
      <h2>Date: <%= payment.date %></h2>
      
    </a>
  </div>
  <% } %>
  
  <!DOCTYPE html>
  <html lang="en">
    <!-- Pass a JavaScript variable to a partial in EJS -->
    <%- include('partials/head.ejs', { title: "Home page" }) %>
  
    <body>
      <%- include('partials/navbar') %>
  
      <div class="content">
        <div class="home">
          <div class="item-list">
            <% if (payments.length > 0) { %>
            <!-- Call the renderPayment function for each payment -->
            <% payments.forEach(renderPayment); %> <% } else { %>
            <p>No payments found.</p>
            <% } %>
          </div>
        </div>
      </div>
  
      <%- include('partials/footer') %>
    </body>
  </html>